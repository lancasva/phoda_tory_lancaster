<!-- Validation failure messages -->

<% if @job_request.errors.any? %>
  <% @job_request.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Edit Job Request #<%= @job_request.id %></h3>
      </div>
      <div class="panel-body">
        <form action="/update_job_request/<%= @job_request.id %>" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <div class="form-group">
              <label for="description" class="col-sm-2 control-label">
                Photographer Last Name
              </label>
              <div class="col-sm-10">
                <input type="text" id="description" name="description" placeholder="Photographer Last Name" class="form-control" value="<%= @job_request.description %>">
              </div>
            </div>

          <!-- Label and input for location -->
            <div class="form-group">
              <label for="location" class="col-sm-2 control-label">
                Location
              </label>
              <div class="col-sm-10">
                <input type="text" id="location" name="location" placeholder="Location" class="form-control" value="<%= @job_request.location %>">
              </div>
            </div>


            <!-- Label and input for date -->
            <div class="form-group">
              <label for="date" class="col-sm-2 control-label">
                Date
              </label>
              <div class="col-sm-10">
                <input type="text" id="date" name="date" placeholder="Date" class="form-control" value="<%= @job_request.date %>">
              </div>
            </div>

            <!-- Label and input for user last name -->
            <div class="form-group">
              <label for="user_last_name" class="col-sm-2 control-label">
                User Last Name
              </label>
              <div class="col-sm-10">
                <input type="text" id="user_last_name" name="user_last_name" placeholder="User Last Name" class="form-control" value="<%= @job_request.user_last_name %>">
              </div>
            </div>

            <!-- Label and input for user first name -->
            <div class="form-group">
              <label for="user_first_name" class="col-sm-2 control-label">
                User First Name
              </label>
              <div class="col-sm-10">
                <input type="text" id="user_first_name" name="user_first_name" placeholder="User First Name" class="form-control" value="<%= @job_request.user_first_name %>">
              </div>
            </div>

            <!-- Label and input for user email -->
            <div class="form-group">
              <label for="user_email" class="col-sm-2 control-label">
                User Email Address
              </label>
              <div class="col-sm-10">
                <input type="text" id="user_email" name="user_email" placeholder="User Email Address" class="form-control" value="<%= @job_request.user_email %>">
              </div>
            </div>


          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-warning">
                Update Job Request
              </button>
              or
              <a href="/job_requests/<%= @job_request.id %>">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


<!-- End responsive panel example -->
